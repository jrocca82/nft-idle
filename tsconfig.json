{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "outDir": "dist",
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "./scripts",
    "artifacts",
    "./hardhat.config.ts",
    "./scripts",
    "./deploy",
    "./test"
  ],
  "files": ["./hardhat.config.ts"]
}
